{
  "mcpServers": {
    "mastra": {
      "command": "npx",
      "args": [
        "-y",
        "@mastra/mcp-docs-server"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "nuxt": {
      "url": "http://localhost:3000/__mcp/sse"
    },
    "nuxt-docs": {
      "url": "https://mcp.nuxt.com/sse",
      "alwaysAllow": [
        "search_nuxt_docs"
      ]
    }
  }
}